<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QianShiMusic.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:QianShiMusic.Controls"
    xmlns:musicModels="clr-namespace:NeteaseCloudMusicApi.Models;assembly=NeteaseCloudMusicApi"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:vms="clr-namespace:QianShiMusic.ViewModels"
    Title="aa"
    x:DataType="{x:Type vms:MainPageViewModel}">
    <CollectionView ItemSizingStrategy="MeasureFirstItem" ItemsSource="{Binding Playlists}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout
                HorizontalItemSpacing="8"
                Orientation="Vertical"
                Span="4"
                VerticalItemSpacing="16" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="musicModels:Playlist">
                <controls:PlaylistCardView CommandParameter="{Binding}" TappedCommand="{Binding Source={x:RelativeSource AncestorType={x:Type vms:MainPageViewModel}}, Path=ToPlaylistDetailCommand}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>