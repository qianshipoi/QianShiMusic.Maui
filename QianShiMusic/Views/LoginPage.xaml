<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QianShiMusic.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vms="clr-namespace:QianShiMusic.ViewModels"
    Title="LoginPage"
    x:DataType="vms:LoginViewModel">
    <VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
        <Image
            HeightRequest="240"
            Source="{Binding AuthQrCodeImage}"
            WidthRequest="240" />
        <Button Command="{Binding SaveCommand}" Text="保存到相册" />
    </VerticalStackLayout>
</ContentPage>