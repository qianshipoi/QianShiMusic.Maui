<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QianShiMusicClient.Maui.Views.Login.LoginByEmailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="网易邮箱账号登录"
    NavigationPage.HasNavigationBar="True">
    <VerticalStackLayout
        Margin="0,40,0,0"
        Padding="16"
        VerticalOptions="Start">
        <Entry FontSize="22" Placeholder="请输入邮箱账号" />
        <Entry
            Margin="0,24"
            FontSize="22"
            IsPassword="True"
            Placeholder="请输入密码" />
        <Button
            CornerRadius="24"
            FontSize="18"
            Text="登录" />
        <Label
            Margin="0,16,0,0"
            HorizontalOptions="Center"
            Text="重设密码"
            TextColor="Blue" />
    </VerticalStackLayout>
</ContentPage>